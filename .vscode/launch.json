{
  "version": "0.2.0",
  "// NOTE": "All configurations use new CLI parameters for full control",
  "// AVAILABLE": "Press F5 and select a configuration to start debugging",
  "configurations": [
    {
      "name": "Debug Stomper - Parallel Workflow (2 files)",
      "type": "debugpy",
      "request": "launch",
      "module": "stomper",
      "args": [
        "fix",
        "--directory", "test_errors/",
        "--ruff",
        "--no-mypy",
        "--max-parallel-files", "2",
        "--use-sandbox",
        "--no-run-tests"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src",
        "VIRTUAL_ENV": "${workspaceFolder}/.venv",
        "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}"
      }
    },
    {
      "name": "Debug Stomper - Sequential (1 file at a time)",
      "type": "debugpy",
      "request": "launch",
      "module": "stomper",
      "args": [
        "fix",
        "--directory", "test_errors/",
        "--include", "**/*.py,**/*.pyi",
        "--ruff",
        "--no-mypy",
        "--max-parallel-files", "1",
        "--use-sandbox",
        "--run-tests",
        "--debug"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src",
        "VIRTUAL_ENV": "${workspaceFolder}/.venv",
        "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}"
      }
    },
    {
      "name": "Debug Stomper - Current File",
      "type": "debugpy",
      "request": "launch",
      "module": "stomper",
      "args": [
        "fix",
        "--file", "${file}",
        "--ruff",
        "--no-mypy",
        "--max-parallel-files", "1",
        "--no-run-tests"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src",
        "VIRTUAL_ENV": "${workspaceFolder}/.venv",
        "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}"
      }
    },
